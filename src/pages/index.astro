---
import BDH from '../components/BDH.astro';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';
import Icon from '../components/Icon.astro';
import Tweet from '../components/Tweet.astro';
import Layout from '../layouts/Layout.astro';
import { load } from '../scripts/load';

const { translations: t } = await load(Astro);
---

<Layout>
  <Hero />
  <section>
    <div>
      <h2>{t.index.projects}</h2>
      <a href="/projects">{t.index.moreProjects}</a>
    </div>
    <div class="projects">
      <article>
        <BDH />
        <!-- <h3>Beter dan Hugo</h3>
        <p>
          A pandemic simulation game that puts you in the shoes of health minister Hugo de Jonge
        </p> -->
      </article>
      <article>
        <Tweet />
      </article>
    </div>
  </section>
</Layout>

<style lang="scss">
  h2 {
    font-size: 0.875rem;
    color: var(--btn-txt-color);
  }

  h3 {
    font-family: Fraunces, serif;
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 0;
    display: flex;
    gap: 1rem;
  }

  span {
    font-family: var(--font-body);
    font-weight: 400;
    font-size: 0.625em;
    background-color: var(--btn-bg-color);
    padding: 0.375rem 0.75rem;
    border-radius: 2rem;
  }

  .projects {
    display: flex;
    flex-wrap: wrap;
    gap: 2rem;
  }

  article {
    min-width: 20rem;
    // margin-bottom: 3rem;
    flex: 1;
    & img {
      width: 100%;
      height: 20rem;
      object-position: top;
      object-fit: cover;
      border-radius: 0.5rem;
    }
  }

  article > p {
    margin-top: 0.75rem;
    font-size: 1rem;
  }

  section {
    margin-block: 4rem;
  }

  section > div {
    display: flex;
    justify-content: space-between;
    font-size: 0.875rem;
    align-items: center;
    margin-block: 1rem;
  }

  // p {
  //   max-width: 25rem;
  // }
</style>
