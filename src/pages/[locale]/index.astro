---
import Layout from '@/components/BaseLayout.astro';
import Project from '@/components/Project.astro';
import Blog from '@/components/Blog.astro';
import { Content, getCollection, getLatest, type Frontmatters } from '@/scripts/content';
import { loadTranslations } from '@/scripts/translate';

export { getStaticPaths } from '@/scripts/translate';
const { t, locale } = await loadTranslations(Astro);

const posts = getLatest('blog', 2);
const projects = getLatest('project', 2);
---

<Layout>
  <header class="my-20 md:my-24">
    <h1 class="font-bold text-gray-800 dark:text-gray-100 text-4xl md:text-5xl !leading-[1.1]">{t.home.title}</h1>
    <p class="text-gray-700 text-xl sm:text-2xl !leading-[1.3] md:!leading-[1.4] dark:text-gray-100 my-7">
      {t.home.description}
      <a href="/about" class="font-semibold transition-colors text-sky-700 dark:text-sky-300 hover:text-sky-600 dark:hover:text-sky-200">
        {t.home.moreAbout}...
      </a>
    </p>
  </header>
  <section id="projects" class="my-20">
    <div class="flex justify-between text-lg">
      <h2 class="font-bold text-gray-800 dark:text-gray-100">{t.home.projects}</h2>
      <a href="/projects" class="font-semibold transition-colors text-sky-700 dark:text-sky-300 hover:text-sky-600 dark:hover:text-sky-200">View more</a>
    </div>
    <div class="grid gap-6 my-8 md:grid-cols-2">
      {projects.map((project) => <Project project={project} />)}
    </div>
  </section>
  <section id="projects" class="my-20">
    <div class="flex justify-between text-lg">
      <h2 class="font-bold text-gray-800 dark:text-gray-100">Laatste artikelen</h2>
      <a href="/blog" class="font-bold transition-colors text-sky-700 dark:text-sky-300 hover:text-sky-600 dark:hover:text-sky-200">View more</a>
    </div>
    <div class="grid gap-6 my-8 md:grid-cols-2">
      {posts.map((post) => <Blog post={post} />)}
    </div>
  </section>
</Layout>
