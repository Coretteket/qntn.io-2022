---
import Layout from '@/components/layouts/BaseLayout.astro';
import { getLatest } from '@/scripts/content';
import { loadTranslations } from '@/scripts/translate';
import Card from '@/components/Card.astro';
import SocialButton, { links } from '@/components/SocialButton.astro';
import Section from '@/components/HomeSection.astro';

export { getStaticPaths } from '@/scripts/translate';
const { t } = await loadTranslations(Astro);

const projects = getLatest('project', 2);
const posts = getLatest('post', 2);
---

<Layout>
  <header class="mt-20 md:mt-24">
    <h1 class="text-[2.7rem] font-bold leading-[1] text-gray-800 dark:text-gray-100 md:text-[3.3rem] md:leading-[1.1]">
      {t.home.title}
    </h1>
    <p class="my-7 text-xl leading-[1.4] text-gray-700 dark:text-gray-100 sm:text-2xl md:leading-[1.5]">
      {t.home.description}
    </p>
  </header>
  <Section id="links" class:override="flex flex-wrap mt-4 my-8 gap-4">
    {links.map((name) => <SocialButton name={name} />)}
  </Section>
  <Section id="projects">
    {projects.map((project) => <Card content={project} />)}
  </Section>
  <!-- <Section id="blog" show:more>
    {posts.map((post) => <Card content={post} />)}
  </Section> -->
</Layout>
