---
import Show from '@/components/Show.astro';
import Layout from '@/layouts/BaseLayout.astro';
export type Props = { title: string; subtitle?: string; name?: string };

const { title, subtitle, name } = Astro.props;
const contentName = name ?? title;
---

<Layout title={title}>
  <header class="mx-auto mt-20 mb-10 md:mt-24 md:mb-12">
    <slot name="banner" />
    <h1 class="mt-10 md:mt-12 mb-4 font-bold text-gray-800 !leading-[1.1] dark:text-gray-100 fluid-text-4xl sm:fluid-text-3xl font-hero">
      {contentName}
    </h1>
    <slot name="subtitle" />
  </header>
  <section class="my-8 prose-p:leading-[1.5] prose-lg md:my-12">
    <slot />
  </section>
</Layout>

<style>
  :is(section, header) > :global(*) {
    @apply mx-auto max-w-blog;
  }
</style>
