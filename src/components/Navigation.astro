---
import { locale, theme, translations } from '../scripts/stores';
import ToggleLocale from './ToggleLocale.svelte';
import ToggleTheme from './ToggleTheme.svelte';
const t = translations.get();
---

<nav>
  <ToggleLocale client:load locale={locale.get()} t={t.locale} />
  <ToggleTheme client:load theme={theme.get()} />
</nav>

<style>
  nav {
    margin-block: 1rem;
    margin-inline: auto;
    max-width: 40rem;
    display: flex;
    justify-content: flex-end;
    gap: 1rem;
  }
</style>
