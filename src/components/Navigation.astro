---
import MobileMenu from './MobileMenu.astro';
import ToggleLocale from './ToggleLocale.astro';
import ToggleTheme from './ToggleTheme.astro';

const links = [
  { href: '/', label: 'Home' },
  { href: '/about', label: 'About' },
  { href: '/blog', label: 'Blog' },
  { href: '/contact', label: 'Contact' },
];

const current = new URL(Astro.request.url).pathname;
console.log(current);
---

<nav>
  <a href="/">Quinten Coret</a>
  <div class="links">
    {
      links.map((link) => (
        <a href={link.href} aria-current={current === link.href ? 'page' : null}>
          {link.label}
        </a>
      ))
    }
  </div>
  <div class="buttons">
    <ToggleTheme />
    <ToggleLocale />
    <!-- <MobileMenu /> -->
  </div>
</nav>

<style lang="scss">
  nav {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    margin-block: 1rem;
    margin-inline: auto;
    max-width: var(--container-width);
    & > a {
      font-size: 1.125rem;
      display: flex;
      font-family: Fraunces;
      align-items: center;
    }
  }

  div {
    display: flex;
    align-items: center;
    gap: 1rem;
    height: 36px;
  }

  .links {
    justify-content: center;
    width: min-content;
    background-color: var(--btn-bg-color);
    border-radius: 2rem;
    gap: 0.5rem;
    padding: 0.25rem;
    & a {
      padding: 0.25rem 0.5rem;
      border-radius: 2rem;

      &[aria-current='page'] {
        background-color: var(--bg-color);
        font-weight: 500;
        padding-inline: 0.75rem;
      }
    }
  }

  .buttons {
    justify-content: end;
  }

  a {
    text-decoration: none;
    color: var(--txt-color);
    transition: color 150ms var(--easing);
    &:hover {
      color: var(--mid-color);
    }
  }
</style>
