---
import Icon from 'astro-icon';
import { state } from '@/scripts/translate';
import Image from './Image.astro';

const { locale } = state;

const title = state.t.bdh.title;
const t = state.t.bdh.app;

const logo = locale === 'nl' ? '/nrc-logo.png' : '/nyt-logo.png';
---

<article>
  <b>{title}</b>
  <div class="box">
    <Image src="/bdh-graph.png" alt={t.graph} width={220} aspectRatio={2.5} />
    <div class="stats">
      <div><Icon name="fa-solid:virus" width={14} alt={t.test} /> 784</div>
      <div><Icon name="fa-solid:ambulance" width={14} alt={t.hospital} /> 230</div>
      <div><Icon name="fa-solid:skull" width={12} alt={t.deaths} /> 82</div>
    </div>
  </div>
  <div class="box">
    <div class="news">
      <Image src={logo} width={16} aspectRatio={1} alt="" />
      <span>{t.title}</span>
    </div>
    {t.headline}
  </div>
  <p>{t.today}<b>{t.date}</b>.</p>
  <div class="buttons">
    <div><Icon name="fa-solid:pause" width={12} alt={t.pause} /></div>
    <div class="sel"><Icon name="fa-solid:play" width={12} alt={t.play} /></div>
    <div><Icon name="fa-solid:step-forward" width={12} alt={t.step} /></div>
    <div><Icon name="fa-solid:fast-forward" width={12} alt={t.fast} /></div>
  </div>
  <p><b>{t.header}</b></p>
  <div class="btn">
    <Icon name="fa-solid:people-arrows" width={14} alt="" />
    {t.distance}
  </div>
</article>

<style>
  article {
    padding-inline: 1.5rem;
  }

  article > b {
    display: inline-block;
    margin-top: 1rem;
    font-size: 1.5rem;
  }

  .stats div,
  .box {
    width: 100%;
    background-color: #dadada;
    border: 2px solid #8d8d8d;
    border-radius: 0.6em;
    margin-top: 1em;
    padding: 0.5rem;
    line-height: 1.1;
    font-size: 0.9em;
    color: #2e2e2e;

    & div {
      display: flex;
      gap: 0.5rem;
    }

    & :global(img[src*='logo']) {
      border-radius: 30%;
    }
  }

  .stats div {
    margin-top: 0.25rem;
    padding-block: 0.25rem;
    border-radius: 0.375rem;
    background-color: #ececec;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-weight: 600;
  }

  .news {
    gap: 0.5rem;
    font-size: 0.9em;
    font-weight: 600;
    margin-bottom: 0.25rem;
    display: flex;
    align-items: center;
  }

  p {
    margin-bottom: 0.5rem;
  }

  .buttons {
    display: flex;
    gap: 0.5rem;

    & > div {
      width: 1.75rem;
      aspect-ratio: 1;
      justify-content: center;
    }

    & > .sel {
      background-color: #2e2e2e;
      color: #dadada;
    }
  }

  .btn,
  .buttons > div {
    display: flex;
    align-items: center;
    border: 2px solid #2e2e2e;
    color: #2e2e2e;
    border-radius: 0.375rem;
  }

  .btn {
    padding: 0.25rem 1rem;
    gap: 0.75rem;
  }
</style>
