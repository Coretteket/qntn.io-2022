---
import { state } from '../scripts/translate';
import Icon from './Icon.astro';
import SocialLinks from './SocialLinks.astro';
const t = state.translations;

const socials = ['linkedin', 'twitter', 'github', 'telegram'] as const;
---

<header>
  <div>
    <h1>{t.index.title}</h1>
    <h2>{t.index.description}</h2>
  </div>
</header>

<style>
  header {
    margin-block: 6rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-block: 0;
  }

  h2 {
    font-weight: normal;
    font-size: 1.25rem;
    max-width: 36rem;
  }
</style>
