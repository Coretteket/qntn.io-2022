---
import { state } from '../scripts/translate';
import SocialLinks from './SocialLinks.astro';
const t = state.translations;
---

<header>
  <div>
    <h1>{t.index.title}</h1>
    <h2>{t.index.description}</h2>
    <SocialLinks />
  </div>
  <!-- <Block width={12} image="/headshot.webp" /> -->
</header>

<style>
  header {
    margin-block: 6rem;
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    /* align-items: center; */
  }

  div {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 600;
    margin-block: 0;
  }

  h2 {
    font-weight: normal;
    font-size: 1.25rem;
    max-width: 36rem;
    margin-block: 1rem 1.5rem;
  }
</style>
